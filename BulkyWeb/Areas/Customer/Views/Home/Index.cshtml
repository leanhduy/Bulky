@model IEnumerable<Product>
@{
	ViewData["Title"] = "Home Page";
}

<div class="row mb-5">
	@foreach (var p in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p-3 shadow border-top border-5 rounded">
						<img src="@p.ImageUrl" class="card-img-top rounded" />
						<div class="body pb-1">
							<div class="ps-1">
								<div class="card-title h5 text-dark opacity-75 text-center text-uppercase pt-1">
									@p.Title
								</div>
								<div class="card-title text-warning text-center">
									by <b>@p.Author</b>
								</div>
							</div>
							<div class="ps-1 mb-0">
								<div class="text-opacity-75 text-dark text-center">
									Price: 
									<span class="text-decoration-line-through">@p.ListPrice.ToString("c")</span>
								</div>
							</div>
							<div class="ps-1">
								<div class="text-opacity-75 text-dark text-center">
									As low as: <span>@p.Price100.ToString("c")</span>
								</div>
							</div>
							<div>
								<a asp-action="Details" asp-route-id="@p.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>