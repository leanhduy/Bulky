@* Product view for edit *@
@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="POST" class="row">
			<div class="border p-3">
				@*
				Include Hidden fields for Price, Price50, Price100 to prevent default values of 0
				which will violate the data validation
				*@
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="Price" />
				<input type="hidden" asp-for="Price50" />
				<input type="hidden" asp-for="Price100" />

				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
					<label asp-for="ISBN" class="ms-2"></label>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" type="text" class="form-control border-0 shadow" />
					<label asp-for="Title" class="ms-2"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" type="text" class="form-control border-0 shadow" />
					<label asp-for="Author" class="ms-2"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
					<label asp-for="ListPrice" class="ms-2"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" type="text" class="form-control border-0 shadow" rows="4"></textarea>
					<label asp-for="Description" class="ms-2"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary w-100">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a class="btn btn-secondary border w-100" asp-area="Customer" asp-controller="Product" asp-action="Index">Back to List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}