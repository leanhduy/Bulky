@*
    Product - Delete view
	This page is not used if we use DataTables and using js / jquery to invoke the Delete API in the controller
*@

@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="POST" asp-controller="Product" asp-action="DeletePOST" asp-route-id="@Model.Id">
			<div class="border p-3 mt-4">
				@*
					Include Hidden fields for Price, Price50, Price100 to prevent default values of 0
					which will violate the data validation
				*@
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="Price" />
				<input type="hidden" asp-for="Price50" />
				<input type="hidden" asp-for="Price100" />

				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow" disabled />
					<label asp-for="ISBN" class="ms-2"></label>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" disabled />
					<label asp-for="Title" class="ms-2"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" disabled />
					<label asp-for="Author" class="ms-2"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
					<label asp-for="ListPrice" class="ms-2"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
					<label asp-for="Description" class="ms-2"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger w-100">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a class="btn btn-secondary border w-100" asp-controller="Product" asp-action="Index">Back to List</a>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>