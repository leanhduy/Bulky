@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product Details</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row mb-3">
			<div class="col-md-6">
				<h5 class="font-weight-bold">Title:</h5>
				<p>@Model.Title</p>
			</div>
			<div class="col-md-6">
				<h5 class="font-weight-bold">ISBN:</h5>
				<p>@Model.ISBN</p>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<h5 class="font-weight-bold">Author:</h5>
				<p>@Model.Author</p>
			</div>
			<div class="col-md-6">
				<h5 class="font-weight-bold">List Price:</h5>
				<p>@Model.ListPrice</p>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-4">
				<h5 class="font-weight-bold">Price for 1-50:</h5>
				<p>@Model.Price</p>
			</div>
			<div class="col-md-4">
				<h5 class="font-weight-bold">Price for 50+:</h5>
				<p>@Model.Price50</p>
			</div>
			<div class="col-md-4">
				<h5 class="font-weight-bold">Price for 100+:</h5>
				<p>@Model.Price100</p>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<h5 class="font-weight-bold">Description:</h5>
				<p>@Model.Description</p>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-6 col-md-3">
				<a class="btn btn-secondary border w-100" asp-area="Customer" asp-controller="Product" asp-action="Index">Back to List</a>
			</div>
		</div>
	</div>

</div>

