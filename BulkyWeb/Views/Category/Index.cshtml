@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Index">
				<i class="bi bi-plus-circle"></i> Add New Category
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cate in Model)
		{
			<tr>
				<td>@cate.Name</td>
				<td>@cate.DisplayedOrder</td>
			</tr>
		}
	</tbody>
</table>