@model Category

<form method="POST">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>

		<div class="mb-3 row p-1">
			<label class="p-0">Category Name</label>
			<input type="text" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Display Order</label>
			<input type="text" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary w-100">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a class="btn btn-secondary border w-100" asp-controller="Category" asp-action="Index">Back to List</a>
			</div>
		</div>

	</div>
</form>